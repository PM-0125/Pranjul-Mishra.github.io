---
import {
  research,
  projects,
  experience,
  publications,
  education,
  certifications,
  skills,
  additionalSkills,
  awards,
  youtubeChannel,
  blogPosts,
  navSections
} from '../data/content';
import '../styles/global.css';
import UniverseBackground from '../components/UniverseBackground';
import HeroParticles from '../components/HeroParticles';
import Planet3D from '../components/Planet3D';
import AcademicVisual from '../components/AcademicVisual';
import ExperienceTimeline from '../components/ExperienceTimeline';
import PublicationsVisualization from '../components/PublicationsVisualization';
import EducationVisualization from '../components/EducationVisualization';

import AwardsVisualization from '../components/AwardsVisualization';
import BlogVisualization from '../components/BlogVisualization';
import ContactVisualizationWrapper from '../components/ContactVisualizationWrapper';

const hero = {
  name: 'Pranjul Mishra',
  role: 'Research Software Engineer',
  location: 'Warsaw, Poland',
  focus: 'Credible AI / RAG / Research Software',
  bio: 'Research Software Engineer | AI & High-Dimensional Data Systems. I build production-grade architectures for complex AI research. Expert in bridging the gap between theoretical ML models and scalable, reproducible software systems‚Äîspecialized in RAG, Knowledge Graphs, and Computational Genomics.',
  email: 'pranjulmishra228161@gmail.com',
  calendly: 'https://calendly.com/anjananandan0125',
  github: 'https://github.com/PM-0125',
  scholar: 'https://scholar.google.com/citations?user=MrgWFs8AAAAJ&hl=en&authuser=1',
  linkedin: 'https://www.linkedin.com/in/pranjul-mishra/',
  orcid: 'https://orcid.org/my-orcid?orcid=0009-0003-5503-1314',
  youtube: 'https://www.youtube.com/@AnjanaNandan0125'
};
---

<!doctype html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{hero.name} - {hero.role}</title>
    <meta
      name="description"
      content="Portfolio of Pranjul Mishra ‚Äî Research Software Engineer focused on credible AI, LLM apps, and reproducible ML."
    />
    <link rel="manifest" href="/manifest.webmanifest" />
    <link
      rel="icon"
      href="data:image/svg+xml,<svg xmlns=%27http://www.w3.org/2000/svg%27 viewBox=%270 0 100 100%27><circle cx=%2750%27 cy=%2750%27 r=%2740%27 fill=%27%2322d3ee%27/><circle cx=%2745%27 cy=%2740%27 r=%2710%27 fill=%27%23e879f9%27/></svg>"
    />
    <meta property="og:title" content={`${hero.name} - ${hero.role}`} />
    <meta property="og:description" content="Credible AI, RAG, reproducible ML, and research software engineering." />
    <meta property="og:type" content="website" />
    <meta property="og:url" content="https://pm-0125.github.io/" />
    <meta property="og:image" content="https://pm-0125.github.io/og-preview.png" />
  </head>
  <body>
    <!-- Mobile Desktop Viewing Notice -->
    <div class="mobile-notice" id="mobileNotice">
      <div class="notice-content">
        <span>üíª For the best experience with 3D visuals, view on desktop</span>
        <button class="notice-close" onclick="document.getElementById('mobileNotice').style.display='none'" aria-label="Close notice">√ó</button>
      </div>
    </div>

    <UniverseBackground client:load />
    <aside class="side-nav">
      <div class="brand">
        <img src="/photo.jpg" alt={hero.name} class="profile-photo" />
        <div>
          <div class="brand-name">{hero.name}</div>
          <div class="brand-role">{hero.role}</div>
        </div>
      </div>
      <nav id="toc">
        {navSections.map((s) => (
          <a href={`#${s.id}`}>{s.label}</a>
        ))}
      </nav>
    </aside>

    <main>
      <section id="hero" class="panel" style="position: relative;">
        <HeroParticles client:load />
        <div class="hero-grid">
          <div class="hero-text">
            <p class="eyebrow">{hero.location} ¬∑ {hero.focus}</p>
            <h1>Hi, I'm {hero.name}.</h1>
            <p class="lead">{hero.bio}</p>
            <div class="cta-row">
              <a class="btn primary" href={`mailto:${hero.email}`}>Email</a>
              <a class="btn primary" href="/PRANJULMISHRA_CV.pdf" download>Download CV</a>
            </div>
            <div class="socials">
              <a href={hero.linkedin} target="_blank" rel="noopener" aria-label="LinkedIn" title="LinkedIn">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="#0077b5" xmlns="http://www.w3.org/2000/svg">
                  <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
                </svg>
              </a>
              <a href={hero.github} target="_blank" rel="noopener" aria-label="GitHub" title="GitHub">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="#ffffff" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                </svg>
              </a>
              <a href={hero.scholar} target="_blank" rel="noopener" aria-label="Google Scholar" title="Google Scholar">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="#4285F4" xmlns="http://www.w3.org/2000/svg">
                  <path d="M5.242 13.769L0 9.5 12 0l12 9.5-5.242 4.269C17.548 11.249 14.978 9.5 12 9.5c-2.977 0-5.548 1.748-6.758 4.269zM12 10a7 7 0 1 0 0 14 7 7 0 0 0 0-14z"/>
                </svg>
              </a>
              <a href={hero.youtube} target="_blank" rel="noopener" aria-label="YouTube" title="YouTube">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="#FF0000" xmlns="http://www.w3.org/2000/svg">
                  <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                </svg>
              </a>
              <a href={hero.orcid} target="_blank" rel="noopener" aria-label="ORCID" title="ORCID">
                <svg width="20" height="20" viewBox="0 0 24 24" fill="#A6CE39" xmlns="http://www.w3.org/2000/svg">
                  <path d="M12 0C5.372 0 0 5.372 0 12s5.372 12 12 12 12-5.372 12-12S18.628 0 12 0zM7.369 4.378c.525 0 .947.431.947.956s-.422.956-.947.956-.947-.431-.947-.956.422-.956.947-.956zm-.722 3.368h1.444v10.257H6.647V7.746zm3.562 0h3.9c3.712 0 5.694 2.381 5.694 5.128 0 2.747-1.981 5.129-5.694 5.129h-3.9V7.746zm1.444 1.303v7.51h2.456c2.484 0 3.806-1.537 3.806-3.755s-1.322-3.755-3.806-3.755h-2.456z"/>
                </svg>
              </a>
            </div>
          </div>
          <div class="hero-visual">
            <div class="planetary-illustration">
              <div class="orbit orbit-1"></div>
              <div class="orbit orbit-2"></div>
              <img src="/photo.jpg" alt={hero.name} class="planet-core" />
            </div>
          </div>
        </div>
      </section>

      <section id="research" class="panel">
        <header><h2>Research & Open Source Projects</h2><p>Credible AI, BioXAI, reproducible ML, and clinical RAG utilities.</p></header>
        <div class="grid">
          {research.map((item) => (
            <div class="project-card">
              <div class="project-planet">
                <Planet3D client:load planetType={item.planet || 'earth'} />
              </div>
              <div class="project-content">
                <p class="eyebrow">{item.location || 'Planet'}</p>
                <h3>{item.title}</h3>
                <p class="project-summary">{item.readme || item.summary}</p>
                {item.links && (
                  <div class="project-links">
                    {item.links.map((l) => (
                      <a class="btn ghost" href={l.href} target="_blank" rel="noopener">{l.label}</a>
                    ))}
                  </div>
                )}
                <div class="tags">{item.tags.map((t) => <span class="tag">{t}</span>)}</div>
              </div>
            </div>
          ))}
        </div>
      </section>

      <section id="projects" class="panel">
        <header><h2>Academic Projects</h2><p>Selected builds and experiments.</p></header>
        <div class="grid">
          {projects.map((item) => (
            <div class="project-card">
              <div class="project-planet">
                <AcademicVisual client:load visualType={item.visualType || 'ui'} />
              </div>
              <div class="project-content">
                <p class="eyebrow">{item.location || 'Project'} ¬∑ {item.year}</p>
                <h3>{item.title}</h3>
                <p class="project-summary">{item.readme || item.summary}</p>
                {item.links && (
                  <div class="project-links">
                    {item.links.map((l) => (
                      <a class="btn ghost" href={l.href} target="_blank" rel="noopener">{l.label}</a>
                    ))}
                  </div>
                )}
                <div class="tags">{item.tags.map((t) => <span class="tag">{t}</span>)}</div>
              </div>
            </div>
          ))}
        </div>
      </section>

      <section id="experience" class="panel">
        <header><h2>Experience</h2></header>
        
        
        
        <div class="experience-timeline">
          {experience.map((e, index) => (
            <div class="timeline-item">
              <div class="timeline-marker">
                <div class="timeline-dot"></div>
                {index < experience.length - 1 && <div class="timeline-line"></div>}
              </div>
              <div class="timeline-content">
                <div class="timeline-header">
                  <div class="eyebrow">{e.org} ¬∑ {e.location}</div>
                  <span class="timeline-date">{e.dates}</span>
                </div>
                <h3>{e.role}</h3>
                <ul>{e.bullets.map((b) => <li>{b}</li>)}</ul>
              </div>
            </div>
          ))}
        </div>
      </section>

      <section id="publications" class="panel">
        <header><h2>Publications & Talks</h2></header>
        
        {(() => {
          const groupedByYear = publications.reduce((acc, pub) => {
            if (!acc[pub.year]) acc[pub.year] = [];
            acc[pub.year].push(pub);
            return acc;
          }, {});
          
          const years = Object.keys(groupedByYear).sort((a, b) => b - a);
          
          return years.map((year) => (
            <div class="year-group">
              <div class="year-header">
                <h3>{year}</h3>
                <div class="year-line"></div>
              </div>
              
              <div class="publications-grid">
                {groupedByYear[year].map((pub) => (
                  <div class="publication-card">
                    <div class="publication-header">
                      <span class={`pub-type-badge ${pub.type}`}>
                        {pub.type === 'journal' ? 'üìÑ Journal' : 
                         pub.type === 'preprint' ? 'üìù Preprint' :
                         pub.type === 'book-chapter' ? 'üìö Book Chapter' : 'üìë Publication'}
                      </span>
                      <span class={`pub-status-badge ${pub.status}`}>
                        {pub.status === 'published' ? '‚úì Published' : '‚è≥ Preprint'}
                      </span>
                      <span class="pub-year">{pub.year}</span>
                    </div>
                    
                    <h3>{pub.title}</h3>
                    
                    <div class="publication-meta">
                      <p class="pub-authors">{pub.authors}</p>
                      <p class="pub-venue">{pub.venue}</p>
                    </div>
                    
                    <p class="pub-abstract">{pub.abstract}</p>
                    
                    <div class="pub-links">
                      {pub.doi && (
                        <a class="btn ghost small" href={pub.doi} target="_blank" rel="noopener">
                          üîó DOI
                        </a>
                      )}
                      {pub.pdf && (
                        <a class="btn ghost small" href={pub.pdf} target="_blank" rel="noopener">
                          üìÑ PDF
                        </a>
                      )}
                      {pub.scholar && (
                        <a class="btn ghost small" href={pub.scholar} target="_blank" rel="noopener">
                          üéì Scholar
                        </a>
                      )}
                    </div>
                    
                    <div class="tags">{pub.tags.map((t) => <span class="tag">{t}</span>)}</div>
                  </div>
                ))}
              </div>
            </div>
          ));
        })()}
      </section>

      <section id="education" class="panel">
        <header><h2>Education</h2></header>
        

        
        <div class="education-grid">
          {education.map((edu) => (
            <div class="education-card">
              <div class="education-header">
                <span class={`edu-status-badge ${edu.status}`}>
                  {edu.status === 'completed' ? '‚úì Completed' : 'üìö In Progress'}
                </span>
                <span class="edu-dates">{edu.startDate} ‚Äì {edu.endDate}</span>
              </div>
              
              <h3>{edu.degree}</h3>
              <p class="edu-field">{edu.field}</p>
              {edu.specialization && <p class="edu-spec">Specialization: {edu.specialization}</p>}
              
              <div class="education-meta">
                <p class="edu-institution">üéì {edu.institution}</p>
                <p class="edu-location">üìç {edu.location}</p>
              </div>
              
              <div class="gpa-display">
                <span class="gpa-label">GPA:</span>
                <span class="gpa-score">{edu.gpa}/{edu.gpaScale}</span>
                <span class="gpa-grade">({edu.grade})</span>
              </div>
              
              {(edu.thesis || edu.coursework) && (
                <details class="coursework-details">
                  <summary>üìö Academic Details</summary>
                  <div class="coursework-content">
                    {edu.thesis && (
                      <div class="thesis-info">
                        <strong>Thesis:</strong>
                        <p>{edu.thesis.title}</p>
                        <span class="thesis-status">{edu.thesis.status}</span>
                      </div>
                    )}
                    {edu.coursework && (
                      <div class="coursework-list">
                        <strong>Relevant Coursework:</strong>
                        <ul>
                          {edu.coursework.map((course) => <li>{course}</li>)}
                        </ul>
                      </div>
                    )}
                  </div>
                </details>
              )}
              
              {(edu.honors || edu.achievements || edu.activities) && (
                <div class="achievements-section">
                  {edu.honors && edu.honors.length > 0 && (
                    <div class="honors-list">
                      <strong>üèÜ Honors:</strong>
                      {edu.honors.map((honor) => <span class="honor-badge">{honor}</span>)}
                    </div>
                  )}
                  {edu.achievements && edu.achievements.length > 0 && (
                    <div class="achievements-list">
                      <strong>üéØ Achievements:</strong>
                      <ul>
                        {edu.achievements.map((ach) => <li>{ach}</li>)}
                      </ul>
                    </div>
                  )}
                  {edu.activities && edu.activities.length > 0 && (
                    <div class="activities-list">
                      <strong>üìå Activities:</strong>
                      {edu.activities.map((act) => <span class="activity-tag">{act}</span>)}
                    </div>
                  )}
                </div>
              )}
            </div>
          ))}
        </div>
        
        {certifications && certifications.length > 0 && (
          <>
            <h3 style="margin-top: 2rem; margin-bottom: 1rem;">Certifications & Additional Education</h3>
            <div class="certifications-grid">
              {certifications.map((cert) => (
                <div class="certification-card">
                  <span class={`cert-type-badge ${cert.type}`}>
                    {cert.type === 'exchange' ? 'üåç Exchange' : 'üìú Certificate'}
                  </span>
                  <h4>{cert.title}</h4>
                  <p class="cert-institution">{cert.institution}</p>
                  {cert.location && <p class="cert-location">üìç {cert.location}</p>}
                  {cert.year && <p class="cert-year">{cert.year}</p>}
                  {cert.description && <p class="cert-desc">{cert.description}</p>}
                </div>
              ))}
            </div>
          </>
        )}
      </section>

      </section>

      <section id="skills" class="panel">
        <header><h2>Skills</h2></header>
        
        <div class="skills-domains">
          {Object.entries(skills).map(([key, domain]) => (
            <div class="domain-section">
              <div class="domain-header">
                <h3>{domain.title}</h3>
                <p class="domain-desc">{domain.description}</p>
              </div>
              
              <div class="skills-badges">
                {domain.skills.map((skill) => (
                  <div class={`skill-badge skill-${skill.level}`}>
                    {skill.proof ? (
                      <a href={skill.proof} class="skill-link">
                        <span class="skill-name">{skill.name}</span>
                        <span class="proof-icon">üîó</span>
                      </a>
                    ) : (
                      <span class="skill-name">{skill.name}</span>
                    )}
                    <div class="proficiency-dots">
                      <span class={skill.level === 'expert' || skill.level === 'proficient' || skill.level === 'learning' ? 'dot filled' : 'dot'}></span>
                      <span class={skill.level === 'expert' || skill.level === 'proficient' ? 'dot filled' : 'dot'}></span>
                      <span class={skill.level === 'expert' ? 'dot filled' : 'dot'}></span>
                    </div>
                  </div>
                ))}
              </div>
            </div>
          ))}
        </div>

        <!-- Additional Skills -->
        <div class="additional-skills">
          <div class="additional-section">
            <h4>Languages</h4>
            <div class="lang-list">
              {additionalSkills.languages.map((lang) => (
                <span>{lang.name} ({lang.level})</span>
              ))}
            </div>
          </div>
          <div class="additional-section">
            <h4>Professional Skills</h4>
            <div class="soft-list">
              {additionalSkills.soft.map((s) => (
                <span>{s}</span>
              ))}
            </div>
          </div>
        </div>
      </section>

      <section id="achievements" class="panel">
        <header><h2>Awards & Recognitions</h2></header>
        
        <!-- 3D Trophy Visual -->
        <AwardsVisualization client:load />
        
        <div class="awards-grid">
          {awards.map((award) => (
            <div class={`award-card ${award.category}`}>
              <div class="award-icon-large">{award.icon}</div>
              
              <div class="award-header">
                <span class={`award-category-badge ${award.category}`}>
                  {award.category === 'hackathon' ? 'üèÜ Hackathon' : 
                   award.category === 'research' ? 'üî¨ Research' : 
                   award.category === 'academic' ? 'üéì Academic' : 
                   'ü§ù Service'}
                </span>
                <span class="award-date">{award.date}</span>
              </div>
              
              <h3>{award.title}</h3>
              <p class="award-title">{award.award}</p>
              <p class="award-org">{award.organization}</p>
              <p class="award-description">{award.description}</p>
            </div>
          ))}
        </div>
      </section>

      <section id="blog" class="panel">
        <header>
          <h2>Public Engagement</h2>
          <p>Bridging the gap between theoretical research and production-grade implementation. Through AI Pathfinders, I deconstruct complex machine learning architectures‚Äîfrom first-principles mathematical optimization to memory-efficient data structures‚Äîto foster a community of rigorous, reproducible AI engineering.</p>
        </header>
        
        <!-- 3D Visual + Channel Card Side by Side -->
        <div class="channel-intro-container">
          <!-- 3D Play Button Visual -->
          <div class="visual-wrapper">
            <BlogVisualization client:load />
          </div>
          
          <!-- YouTube Channel Card -->
          <div class="youtube-channel-card">
            <div class="channel-header">
              <div class="channel-icon">‚ñ∂Ô∏è</div>
              <div class="channel-info">
                <h3>{youtubeChannel.name}</h3>
                <p class="channel-handle">{youtubeChannel.handle}</p>
                <p class="channel-description">{youtubeChannel.description}</p>
              </div>
            </div>
            <a 
              class="btn primary subscribe-btn" 
              href={youtubeChannel.url} 
              target="_blank" 
              rel="noopener"
            >
              üì∫ Visit Channel
            </a>
          </div>
        </div>

        <!-- Featured Video -->
        <div class="featured-video-section">
          <h3 class="section-title">üé• Featured Video</h3>
          <div class="video-featured">
            <div class="video-embed">
              <iframe
                src={`https://www.youtube.com/embed/${youtubeChannel.featuredVideo.id}`}
                title={youtubeChannel.featuredVideo.title}
                frameborder="0"
                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"
                allowfullscreen
              ></iframe>
            </div>
            <div class="video-details">
              <h4>{youtubeChannel.featuredVideo.title}</h4>
              <p>{youtubeChannel.featuredVideo.description}</p>
            </div>
          </div>
        </div>

        <!-- Recent Videos Grid -->
        <div class="recent-videos-section">
          <h3 class="section-title">üìö Recent Videos</h3>
          <div class="videos-grid">
            {youtubeChannel.videos.map((video) => (
              <div class="video-card">
                <div class="video-thumbnail">
                  <a href={`https://www.youtube.com/watch?v=${video.id}`} target="_blank" rel="noopener">
                    <img 
                      src={`https://img.youtube.com/vi/${video.id}/mqdefault.jpg`} 
                      alt={video.title}
                      loading="lazy"
                    />
                    <div class="play-overlay">‚ñ∂</div>
                  </a>
                </div>
                <div class="video-info">
                  <h4>{video.title}</h4>
                  <p>{video.description}</p>
                  <a 
